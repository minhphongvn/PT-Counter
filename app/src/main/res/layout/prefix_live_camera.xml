<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#303242"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activity.PrefixLiveCamera">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:text="Giới hạn" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginVertical="20dp"
            android:text="Nhập giới hạn số lần tập.\nCó thể chọn 'Bắt đầu' mà không cần phải nhập, số lần đếm sẽ là vô hạn." />

        <EditText
            android:id="@+id/inputRep"
            android:background="@drawable/bg_rounded_corners"
            android:layout_width="match_parent"
            android:hint="Nhập số rep..."
            android:inputType="number"
            android:paddingLeft="20dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/startFromPrefix"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#1778F2"
            android:textColor="@color/white"
            android:text="Bắt đầu"/>
    </LinearLayout>

</RelativeLayout>