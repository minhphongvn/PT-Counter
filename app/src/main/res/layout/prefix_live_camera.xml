<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#303242"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PrefixLiveCamera">

    <Button
        android:id="@+id/btn_back_prefix"
        android:background="@drawable/btn_back"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Quay lại"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_margin="20dp"
        android:onClick="back"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:text="Tối đa" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingLeft="13dp"
            android:layout_marginVertical="15dp"
            android:text="- Nhập số rep tối đa.\n- Không nhập, số lần đếm sẽ là vô hạn cho đến khi bạn dừng.\n- Có thể bỏ qua." />

        <EditText
            android:id="@+id/inputRep"
            android:background="@drawable/bg_rounded_corners"
            android:layout_width="match_parent"
            android:hint="Nhập số rep..."
            android:inputType="number"
            android:paddingLeft="20dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/startFromPrefix"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#1778F2"
            android:textColor="@color/white"
            android:text="Bắt đầu"/>
    </LinearLayout>

</RelativeLayout>