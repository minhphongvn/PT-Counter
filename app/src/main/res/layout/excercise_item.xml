<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#4F515E"
    app:cardCornerRadius="8dp"
    android:outlineSpotShadowColor="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardvieww"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/img_exercise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/google_login_icon"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cardvieww"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_regular"
            android:textStyle="bold"
            android:text="Name" />

        <TextView
            android:id="@+id/des_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/cardvieww"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_light"
            android:layout_below="@+id/name_exercise"
            android:text="Lorem Ipsum is simply dummy text of the printing" />


        <Button
            android:id="@+id/startExercise"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="#1778F2"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Bắt đầu"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>